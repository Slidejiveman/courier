<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0" xmlns="http://java.sun.com/xml/ns/persistence">

    <persistence-unit name="courierdb" transaction-type="RESOURCE_LOCAL">
         <class>courierpd.core.Client</class>
         <class>courierpd.core.DeliveryTicket</class>
         <class>courierpd.core.User</class>
         <class>courierpd.core.Owner</class>
         <class>courierpd.core.OrderTaker</class>
         <class>courierpd.core.Courier</class>
         <class>courierpd.map.Intersection</class>

         <properties>
            <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver" />
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/courierdb" />
            <property name="javax.persistence.jdbc.user" value="root" />
            <property name="javax.persistence.jdbc.password" value="" />

            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect" />
            <property name="hibernate.show_sql" value="true" />
            <property name="hibernate.hbm2ddl.auto" value="update" />

         	<property name="eclipselink.logging.level" value="INFO" />
			<property name="eclipselink.ddl-generation" value="create-tables" />
			<property name="eclipselink.allow-zero-id" value="true"/>
        </properties>
    </persistence-unit>
</persistence>
